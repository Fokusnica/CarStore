<% @products.each do |product|  %>
    <div class="col-sm-4">
      <div class="product-image-wrapper">
        <div class="single-products">
          <div class="productinfo text-center">
            <%= image_tag(product.image.url, size: '255x210')%>
            <h2><%= product.price %></h2>
            <p><%= product.title %></p>
            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>В корзину</a>
          </div>
          <div class="product-overlay">
            <div class="overlay-content">
              <h2><%= product.price %></h2>
              <p><%= product.description %></p>
              <%= button_to 'В корзину', line_items_path(product_id: product), {class: 'btn btn-default add-to-cart'} %>
            </div>
          </div>
        </div>
        <div class="choose">
          <ul class="nav nav-pills nav-justified">
            <li><a href="#"><i class="fa fa-plus-square"></i>В закладки</a></li>
            <li><a href="#"><i class="fa fa-plus-square"></i>В сравнение</a></li>
          </ul>
        </div>
      </div>
    </div>

<% end %>