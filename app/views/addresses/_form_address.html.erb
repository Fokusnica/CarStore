<div id="contact-page" class="container">
  <div class="bg">
    <div class="row">
      <div class="col-sm-8">
        <div class="contact-form">
          <h2 class="title text-center">Адрес</h2>
          <%= form_for(@address) do |f| %>


              <div class="form-group col-md-6">
                <%= f.label "Псевдоним адреса" %><br>
                <%= f.text_field :name, class: "form-control", size: 40 %>
              </div>
              <div class="form-group col-md-12">
                <%= f.label "Улица и дом доставки" %><br>
                <%= f.text_area :address, class: "form-control", rows: 3, cols: 40 %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label "Телефон" %><br>
                <%= f.phone_field :phone, class: "form-control", size: 40 %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label "Страна" %><br>
                <%= f.text_field :country, class: "form-control", size: 40 %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label "Город" %><br>
                <%= f.text_field :city, class: "form-control", size: 40 %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label "ФИО получателя" %><br>
                <%= f.text_field :city, class: "form-control", size: 40 %>
              </div>


              <div class="form-group col-md-12">
                <%= f.submit "Добавить", class: "btn btn-primary pull-right" %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>