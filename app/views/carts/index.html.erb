<section>
  <div class="container">
    <div class="row">
      <% if notice.present? %>
          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only"></span>
            <%= notice %>
          </div>
      <% end %>
    </div>
  </div>
</section>