<div id="address">
  <div class="form-group col-md-12">
  <h3 style="color: #A80000; text-align: center;"><%=t('.add_address')%>
    </h3>
    <%=t('.add_address_order')%>
  </div>
  <div class="form-group col-md-6">
    <input type="text" name="name" id="name" class="form-control" required="required" placeholder=<%=t('.address_nick')%>>
  </div>
  <div class="form-group col-md-6">
    <input type="text" name="address" id="address_street" class="form-control" required="required" placeholder=<%=t('.address_full')%>>
  </div>
  <div class="form-group col-md-6">
    <input type="tel" name="phone" id="phone" class="form-control" required="required" placeholder=<%=t('.phone')%>>
  </div>
  <div class="form-group col-md-6">
    <input type="text" name="country" id="country" class="form-control" required="required" placeholder=<%=t('.country')%>>
  </div>
  <div class="form-group col-md-6">
    <input type="text" name="city" id="city" class="form-control" required="required" placeholder=<%=t('.city')%>>
  </div>
  <div class="form-group col-md-6">
    <input type="text" name="title" id="title" class="form-control" required="required" placeholder=<%=t('.name_surname')%>>
  </div>
  <div class="form-group col-md-12">
    <button class="btn btn-primary pull-left" onclick="test_ajax()"><%=t('.add')%></button>
  </div>
</div>
