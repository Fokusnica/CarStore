        </div>
      </div>
    </div>
  </div>
</div>

<script>
    function test_ajax() {
        $.ajax({
            method: "POST",
            url: "<%= ajax_addresses_path %>",
            data: {
                address: {
                    name: $('#name').val(),
                    address: $('#address_street').val(),
                    phone: $('#phone').val(),
                    country: $('#country').val(),
                    city: $('#city').val(),
                    user_id: <%= current_user.id %>,
                    title: $('#title').val()
                }
            },
            dataType: "json",
            statusCode: {
                201: function () {
                    $('#address').empty();
                    console.log('delete address');


                },
            },
            success: function (data) {
                console.log(data);
                $('#order_address_id').append($('<option>', {
                    value: data.id,
                    text: data.name
                }));
                $("#order_address_id option[value=" + data.id + "]").attr('selected', 'selected');
                console.log('insert part')
            },
            error: function () {
                alert("Error!");
            }
        })

    }
</script>


