<div class="container">
  <div class="row">
    <% if notice %>

        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
    <% end %>
<table id="order-list" class="table table-bordered footab default footable-loaded footable">
  <thead>
  <tr>
    <th>Код Заказа:</th>
    <th>Сумма</th>
    <th>Дата</th>
    <th>Статус Заказа:</th>
    <th>Информация о заказе</th>
  </tr>
  </thead>
  <tbody>
  <% @order_history.each do |order| %>
  <tr>
      <td><%= order.id %></td>
      <td><%= order.price %></td>
      <td><%= order.updated_at %></td>
    <td><span style="background-color:#4169E1; border-color:#4169E1;" class="label">Ожидание оплаты</span></td>

      <td><%= link_to "Подробнее", order_path(:id => order.id) %> </td>
  </tr>
  <% end %>
  </tbody>
</table>
      </div>
    </div>

